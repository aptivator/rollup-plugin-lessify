{
  "src_folders" : ["./tests/tests"],
  "selenium": {
    "start_process": true, 
    "server_path": "./node_modules/nightwatch/bin/selenium.jar",
    "host": "127.0.0.1",
    "port": 4444, 
    "cli_args": { 
      "webdriver.chrome.driver" : "./node_modules/nightwatch/bin/chromedriver"
    }
  },  
  "output_folder": false,
  "test_settings" : {
    "e2e": {
      "screenshots": {
        "enabled": true,
        "path": "./screenshots/"
      },
      "globals": {
        "waitForConditionTimeout": 5000 
      },
      "desiredCapabilities": { 
        "browserName": "chrome",
        "javascriptEnabled": true
      }
    }
  }
}
